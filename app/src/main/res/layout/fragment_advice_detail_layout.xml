<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp" >

                <ImageView
                    android:id="@+id/detailImg"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/end_1" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/container1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* 고객정보는 당사 외 "
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제 3자에게 절대 제공되지 않습니다."
                    android:textColor="#ff0000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp" >

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:minWidth="50dp"
                    android:text="- 희망통신사 "
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/radioGroupTelecom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/radioTelecom0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="SKT"
                        android:textColor="#000"
                        android:textSize="11sp" >
                    </RadioButton>

                    <RadioButton
                        android:id="@+id/radioTelecom1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KT"
                        android:textColor="#000"
                        android:textSize="11sp" >
                    </RadioButton>

                    <RadioButton
                        android:id="@+id/radioTelecom2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LGT"
                        android:textColor="#000"
                        android:textSize="11sp" >
                    </RadioButton>

                    <RadioButton
                        android:id="@+id/radioTelecom3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="알뜰폰"
                        android:textColor="#000"
                        android:textSize="11sp" >
                    </RadioButton>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:minWidth="50dp"
                    android:text="- 문의유형 "
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/radioGroupAsk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/radioAsk0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="번호이동"
                        android:textColor="#000"
                        android:textSize="11sp" >
                    </RadioButton>

                    <RadioButton
                        android:id="@+id/radioAsk1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="신규가입"
                        android:textColor="#000"
                        android:textSize="11sp" >
                    </RadioButton>

                    <RadioButton
                        android:id="@+id/radioAsk2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="기기변경"
                        android:textColor="#000"
                        android:textSize="11sp" >
                    </RadioButton>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:minWidth="60dp"
                    android:text="- 신청자 "
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:hint="이름을 입력하세요."
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:minWidth="60dp"
                    android:text="- 연락처 "
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/smsNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:hint="휴대폰번호를 입력해주세요."
                    android:inputType="phone"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:minWidth="60dp"
                    android:text="- 문의사항 "
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/smsTextContext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:hint="현재 사용중이신 통신사고객센터를 통하여 할부금및 위약금을 확인하세요 .^^"
                        android:maxLength="80"
                        android:minHeight="80dp"
                        android:textSize="11sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <CheckBox
                            android:id="@+id/checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:padding="0dp"
                            android:text="개인정보 수집 및 활용 동의"
                            android:textColor="#000000"
                            android:textSize="11sp" />

                        <Button
                            android:id="@+id/agreeButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:paddingLeft="10dp"
                            android:text="보기"
                            android:textColor="#ff0000"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:weightSum="3" >

                <Button
                    android:id="@+id/smsButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#ff0000"
                    android:text="문자보내기"
                    android:textColor="#fff" />

                <Button
                    android:id="@+id/mailButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="#ff0000"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:text="메일보내기"
                    android:textColor="#fff" />

                <Button
                    android:id="@+id/cancelButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#ff0000"
                    android:text="닫기"
                    android:textColor="#fff" />
            </LinearLayout>            
        </LinearLayout>
    </ScrollView>

</RelativeLayout>